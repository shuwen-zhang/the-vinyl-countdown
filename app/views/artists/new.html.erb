<%= stylesheet_link_tag 'vinyl_index' %>

<br>
<h1 class="text-center">Artists</h1>

<div class="container">
  <h3 class="text-center">Add an Artist</h3>

<div class="row">
  <div class="col-md-6 offset-md-3 centered">

    <%= form_tag "/artists" do %>  <!-- post to vinyls, call create -->

      <p>Name: <span class="required">*</span> 
        <input name="name" type="text" autofocus class="form-control" required></p>
      
      <button class="btn btn-secondary btn-block">Add Artist</button>
      <%= link_to "Cancel", "/artists", class: 'btn btn-secondary btn-block' %>

    <% end %>

  </div>
</div>
</div>


