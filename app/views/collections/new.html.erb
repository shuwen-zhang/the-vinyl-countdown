<%= stylesheet_link_tag 'vinyl_index' %>

<h1 class="text-center">Collections</h1>

<div class="container">
  <h3 class="text-center">Create a Collection</h3>

<div class="row">
  <div class="col-md-6 offset-md-3 centered">

    <%= form_tag "/collections" do %>  <!-- post to vinyls, call create -->

      <p>Name: <span class="required">*</span> 
        <input name="name" value="<%= @collection.name %>" type="text" autofocus class="form-control" required></p>
      <%= submit_tag "Create", :class => "btn btn-secondary btn-block"%>
      <%= link_to "Cancel", "/collections", class: 'btn btn-secondary btn-block' %>

    <% end %>

  </div>
</div>
</div>


